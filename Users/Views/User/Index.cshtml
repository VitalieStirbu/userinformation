@model IEnumerable<Users.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>All users: </h1>
<br />
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>First name</th>
        <th>Second name</th>
        <th>Age</th>
        <th>Street</th>
        <th>Country</th>
        <th>Add address</th>
        <th>Delete street</th>
        <th>Delete country</th>
        <th>Phone number</th>
        <th>Phone type</th>
        <th>Add phone</th>
        <th>Delete phone</th>
        <th>Edit user</th>
        <th>Remove User</th>
    </tr>

    @foreach (User user in Model)
    {
        <tr>
            <td>@user.FirstName </td>
            <td>@user.SecondName</td>
            <td>@user.Age</td>
            <td>@user.Street</td>
            <td>@user.Country</td>
            <td class="text-center"><a asp-controller="User" asp-action="AddAddress" asp-route-id="@user.ID"><span class="glyphicon glyphicon-plus"></span></a></td>
            <td class="text-center"><a asp-controller="User" asp-action="DeleteAddress" asp-route-userID="@user.ID" asp-route-street="@user.Street"><span class="glyphicon glyphicon-trash text-danger"></span></a></td>
            <td class="text-center"><a asp-controller="User" asp-action="DeleteCountry" asp-route-userID="@user.ID" asp-route-country="@user.Country"><span class="glyphicon glyphicon-trash text-danger"></span></a></td>
            <td>@user.Phone</td>
            <td>@user.PhoneType</td>
            <td class="text-center"><a asp-controller="User" asp-action="AddPhone" asp-route-id="@user.ID"><span class="glyphicon glyphicon-plus"></span></a></td>
            <td class="text-center"><a asp-controller="User" asp-action="DeletePhone" asp-route-phoneNumber="@user.Phone"><span class="glyphicon glyphicon-trash  text-danger"></span></a></td>
            <td class="text-center"><a asp-controller="User" asp-action="EditUser" asp-route-id="@user.ID" asp-route-phoneID="@user.PhoneID" asp-route-address="@user.Street" asp-route-country="@user.Country"><span class="glyphicon glyphicon-edit"></span></a></td>
            <td class="text-center"><a asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.ID"><span class="glyphicon glyphicon-trash  text-danger"></span></a></td>
        </tr>
    }
</table>

<a class="btn btn-default" asp-controller="User" asp-action="AddUser">Add user!</a>